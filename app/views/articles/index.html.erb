<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Body</th>
      <th>Actions</th>
    </tr>

  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.id %></td>
        <td><%= article.name %></td>
        <td><%= article.body %></td>
        <td><%= link_to 'edit', edit_article_path %></td>
      </tr>
    <% end %>
  </tbody>
</table>

